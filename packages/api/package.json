    "bullmq": "^5.1.6",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.29.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "nodemailer": "^7.0.12",
    "openai": "^4.24.1",
